<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.blake.blockpuzzle2.SettingsActivity">
    <RadioGroup
        android:id="@+id/radioTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Done"
        android:layout_alignEnd="@+id/Done"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Theme selection:"
            android:id="@+id/textView" />

        <RadioButton
            android:id="@+id/radioPipes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Colours"
            android:checked="true" />

        <RadioButton
            android:id="@+id/radioShapes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vehicles" />

        <RadioButton
            android:id="@+id/radioPatterns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Animals" />

    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/Done"
        android:onClick="DonePressed"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
